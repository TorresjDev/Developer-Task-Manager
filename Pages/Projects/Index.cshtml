@page
@model Developer_Task_Manager.Pages_Projects.IndexModel

@{
    ViewData["Title"] = "Projects";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h1>Projects</h1>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</div>

@if (Model.Project.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Project)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ProjectID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ProjectID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ProjectID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No projects found. <a asp-page="Create">Create your first project</a>.
    </div>
}
