@page
@model Developer_Task_Manager.Pages_Tasks.DeleteModel

@{
    ViewData["Title"] = "Delete Task";
}

<div class="page-header">
    <h1>Delete Task</h1>
</div>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.TaskItem.Title</dd>

        <dt class="col-sm-3">Priority</dt>
        <dd class="col-sm-9">@Model.TaskItem.Priority</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.TaskItem.Status</dd>

        <dt class="col-sm-3">Project</dt>
        <dd class="col-sm-9">@Model.TaskItem.Project?.Name</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.TaskItem.Category?.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TaskItem.TaskItemID" />
        <input type="hidden" asp-for="TaskItem.ProjectID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
