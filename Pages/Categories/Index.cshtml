@page
@model Developer_Task_Manager.Pages_Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h1>Categories</h1>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</div>

@if (Model.Category.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CategoryID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CategoryID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No categories found. <a asp-page="Create">Create your first category</a>.
    </div>
}
